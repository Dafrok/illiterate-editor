html, body
  margin 0
  background #39c
  color white
h1, h2, h3, h4, h5, h6, p
  margin 0
  padding 0
  line-height 1
h1
  font-size 36px
h2
  font-size 24px
  font-weight normal
p
  color #ddd
header
  padding 30px
h1, h2
  margin-bottom 10px
.editor-container
  background #f2f2f2
  padding 10px
  border 1px solid #999
  box-shadow 0 0 5px #999 inset
  margin 30px
#editor
  background transparent
  border 0
  padding 0
  margin 0
  outline 0
  width 100%
  resize none